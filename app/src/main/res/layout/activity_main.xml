<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <!-- App Title -->

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="AI Crop Growth &amp; Health Monitor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Existing Logo -->
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAppTitle"
        app:srcCompat="@drawable/logo" />

    <!-- Capture Plant Photo Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCapturePhoto"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:text="Capture Plant Photo"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#4CAF50"
        app:cornerRadius="16dp"
        app:icon="@android:drawable/ic_menu_camera"
        app:iconGravity="start"
        app:iconTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <!-- Select a Photo Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelectPhoto"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="Select a Photo"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#2196F3"
        app:cornerRadius="16dp"
        app:icon="@android:drawable/ic_menu_gallery"
        app:iconGravity="start"
        app:iconTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCapturePhoto" />

    <!-- View Growth History Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGrowthHistory"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="View Growth History"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#9C27B0"
        app:cornerRadius="16dp"
        app:icon="@android:drawable/ic_menu_recent_history"
        app:iconGravity="start"
        app:iconTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSelectPhoto" />

    <!-- Care Suggestions Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCareSuggestions"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="Care Suggestions"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF9800"
        app:cornerRadius="16dp"
        app:icon="@android:drawable/ic_dialog_info"
        app:iconGravity="start"
        app:iconTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGrowthHistory" />

    <!-- Plant Care Tips Section -->
    <TextView
        android:id="@+id/tvTipsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="ðŸ’¡ Daily Plant Care Tip"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#388E3C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCareSuggestions" />

    <TextView
        android:id="@+id/tvPlantTip"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#F1F8E9"
        android:padding="16dp"
        android:text="ðŸŒ± Water your plants early morning or late evening to reduce water evaporation and give roots time to absorb moisture before the heat of the day."
        android:textSize="14sp"
        android:textColor="#2E7D32"
        android:lineSpacingExtra="2dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTipsTitle" />

    <!-- Profile Button (Bottom Right FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Profile"
        android:src="@android:drawable/ic_menu_myplaces"
        app:backgroundTint="#4CAF50"
        app:tint="@android:color/white"
        app:elevation="8dp"
        app:borderWidth="0dp"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
